<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <Button fx:id="buttonPerform" layoutX="466.0" layoutY="352.0" mnemonicParsing="false" text="Perform"/>
        <TextArea fx:id="textAreaPlainText" layoutX="55.0" layoutY="126.0" prefHeight="99.0" prefWidth="210.0"
                  promptText="plain text"/>
        <TextArea fx:id="textAreaCipherCode" layoutX="55.0" layoutY="287.0" prefHeight="99.0" prefWidth="210.0"
                  promptText="cipher text"/>
        <fx:define>
            <ToggleGroup fx:id="toggleGroup"/>
        </fx:define>
        <RadioButton fx:id="radioButtonEncription" layoutX="405.0" layoutY="48.0" mnemonicParsing="false"
                     text="Encript" toggleGroup="$toggleGroup"/>

        <RadioButton fx:id="radioButtonDecription" layoutX="405.0" layoutY="86.0" mnemonicParsing="false" text="Decript"
                     toggleGroup="$toggleGroup"/>
        <TextField layoutX="55.0" layoutY="14.0" promptText="a" fx:id="textAreaA"/>
        <TextField layoutX="55.0" layoutY="53.0" promptText="b" fx:id="textAreaB"/>
    </children>
</AnchorPane>